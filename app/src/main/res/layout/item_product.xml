<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCakeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍰 Tên Bánh"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCakeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả bánh ngọt thơm ngon"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCakePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💰 0.000đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/tvCakeStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📦 Còn: 0"
                android:textSize="14sp"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCakeCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🏷️ Loại: Birthday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCakeSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📏 Size: Medium"
                android:textSize="14sp"
                android:gravity="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCakeFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍓 Vị: Chocolate"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEditCake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="✏️ Sửa"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDeleteCake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="🗑️ Xóa"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_red_light" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
